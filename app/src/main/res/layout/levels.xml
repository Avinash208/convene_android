<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/relativeLayoutForRedioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/block_heading_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="#53350a"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/heading_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/block_heading_spinner"
                android:gravity="center"
                android:text="heading"
                android:textColor="#000099"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtForRadioGroupQuestion"
                style="@style/CodeFont"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text=""
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/helpTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtForRadioGroupQuestion"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="#ff0000"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/level1"

                android:padding="15dp">

                <TextView
                    android:id="@+id/levelOne"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_span="4"
                    android:gravity="center_vertical"
                    android:text="Level1"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/levelOneSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_span="6"
                    android:background="@drawable/spinner_background"
                    android:textSize="18sp" />


            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"

                android:id="@+id/level2"
                android:padding="15dp">

                <TextView
                    android:id="@+id/levelTwo"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_span="4"
                    android:gravity="center_vertical"
                    android:text="Level2"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/levelTwoSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_span="6"
                    android:background="@drawable/spinner_background"
                    android:textSize="18sp" />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/level3"
                android:padding="15dp">

                <TextView
                    android:id="@+id/levelThree"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_span="4"
                    android:gravity="center_vertical"
                    android:text="Level3"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/levelThreeSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_span="6"
                    android:background="@drawable/spinner_background"
                    android:textSize="18sp" />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/level4"
                android:padding="15dp">

                <TextView
                    android:id="@+id/levelFour"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_span="4"
                    android:gravity="center_vertical"
                    android:text="Level4"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/levelFourSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_span="6"
                    android:background="@drawable/spinner_background"
                    android:textSize="18sp" />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/level5"
                android:padding="15dp">

                <TextView
                    android:id="@+id/levelFive"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_span="4"
                    android:gravity="center_vertical"
                    android:text="Level5"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/levelFiveSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_span="6"
                    android:background="@drawable/spinner_background"
                    android:textSize="18sp" />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/level6"
                android:padding="15dp">

                <TextView
                    android:id="@+id/levelSix"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_span="4"
                    android:gravity="center_vertical"
                    android:text="Level6"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/levelSixSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_span="6"
                    android:background="@drawable/spinner_background"
                    android:textSize="18sp" />


            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/level7"
                android:padding="15dp">
                    <TextView
                        android:id="@+id/levelSeven"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_span="4"
                        android:gravity="center_vertical"
                        android:text="Level7"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/levelSevenSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="40dp"
                        android:layout_span="6"
                        android:background="@drawable/spinner_background"
                        android:textSize="18sp" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/level7_Search"
                android:visibility="gone"
                android:padding="15dp">
                <TextView
                    android:id="@+id/level7Text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_span="4"
                    android:gravity="center_vertical"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <org.mahiti.convenemis.CustomAutoCompleteTextView
                    android:id="@+id/level_search"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:drawableRight="@android:drawable/ic_menu_search"
                    android:imeOptions = "actionSearch"
                    android:layout_span="8"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/level8"
                android:padding="15dp">

                <TextView
                    android:id="@+id/levelEight"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_span="4"
                    android:gravity="center_vertical"
                    android:text="Level8"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/levelEightSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_span="5"
                    android:background="@drawable/onesided_spinner"
                    android:textSize="18sp" />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/level9"
                android:padding="15dp">

                <TextView
                    android:id="@+id/levelNine"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_span="4"
                    android:gravity="center_vertical"
                    android:text="Level9"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/levelNineSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_span="5"
                    android:background="@drawable/onesided_spinner"
                    android:textSize="18sp" />

            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_below="@+id/tableLayout"
            android:id="@+id/answeredValue"/>
        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/answeredValue">
            <Button
                android:id="@+id/button_Next_cluster"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_click"
                android:text="Next"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/clusterfooter"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tableLayout"
            android:background="#ffffff">

            <Button
                android:id="@+id/continueButton"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="Continue"
                android:textColor="@color/white"
                />
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>