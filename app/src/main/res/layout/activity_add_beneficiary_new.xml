<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainRelative"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff9e4"
    tools:context=".SurveyQuestionActivity">

    <android.support.v7.widget.Toolbar
        style="@style/AppTheme"
        android:id="@+id/toolbar1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:minHeight="@dimen/abc_action_bar_default_height_material">
        <LinearLayout
            android:id="@+id/backPress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="visible"
                android:padding="8dp"
                android:background="@drawable/toolback" />
        </LinearLayout>
        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/modules"
            android:textSize="18sp"
            android:fontFamily="fonts/Roboto-Light.ttf"
            />
        <ImageView
            android:id="@+id/imageMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar1"
        android:layout_above="@+id/footer"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="4dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="3dp">

                        <LinearLayout
                            android:id="@+id/QuestionContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_margin="10dp"
                            android:paddingBottom="6dp">

                            <TextView
                                android:id="@+id/partnerLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/personal_information"
                                android:visibility="visible"
                                android:textSize="16sp"
                                android:padding="5dp"/>

                            <LinearLayout
                                android:id="@+id/householdContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/houseHoldLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/house_hold"
                                    android:textSize="16sp"
                                    android:visibility="visible"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"/>
                                <TextView
                                    android:id="@+id/errorTexthousehold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:textColor="@color/Red"
                                    android:padding="3dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:orientation="vertical"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:background="@drawable/textfieldbg">
                                    <Spinner
                                        android:id="@+id/beneficiaryhouseHold"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                                        />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/motherholdContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:visibility="gone"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/motherLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/mother"
                                    android:textSize="16sp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    />
                                <TextView
                                    android:id="@+id/errorTextmother"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:textColor="@color/Red"
                                    android:padding="3dp"/>
                                <LinearLayout
                                    android:id="@+id/motherSpinnerContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:background="@drawable/textfieldbg">
                                    <Spinner
                                        android:id="@+id/beneficiarymother"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/motherNameLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/mother_name"
                                android:textSize="16sp"
                                android:visibility="gone"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="5dp"/>
                            <EditText
                                android:id="@+id/motherName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/mother_name"
                                android:visibility="gone"
                                android:imeOptions="actionDone"
                                android:focusable="true"
                                android:textColor="@color/black"
                                android:background="@drawable/textfieldbg"/>

                            <TextView
                                android:id="@+id/nameLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/name"
                                android:layout_marginTop="10dp"
                                android:textSize="16sp"
                                android:visibility="visible"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="5dp"/>
                            <TextView
                                android:id="@+id/errorTextName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:textColor="@color/Red"
                                android:padding="3dp"/>
                            <EditText
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:hint="@string/enter_name"
                                android:textSize="16sp"
                                android:inputType="textCapSentences"
                                android:maxLines="1"
                                android:imeOptions="actionDone"
                                android:focusable="true"
                                android:textColor="@color/black"
                                android:background="@drawable/textfieldbg"/>

                            <TextView
                                android:id="@+id/ageLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/age"
                                android:layout_marginTop="10dp"
                                android:textSize="16sp"
                                android:visibility="visible"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="5dp"/>
                            <TextView
                                android:id="@+id/errorTextAge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:textColor="@color/Red"
                                android:padding="3dp"/>
                            <EditText
                                android:id="@+id/age"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:hint="@string/enter_age"
                                android:focusable="true"
                                android:inputType="number"
                                android:maxLength="3"
                                android:imeOptions="actionDone"
                                android:maxLines="1"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:background="@drawable/textfieldbg"/>
                            <LinearLayout
                                android:id="@+id/parentGardianContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/selectguardianLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/select_guardian"
                                    android:textSize="16sp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="5dp" />

                                <TextView
                                    android:id="@+id/errorTextSelectGuardian"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:textColor="@color/Red"
                                    android:padding="3dp"/>
                                <CheckBox
                                    android:id="@+id/Parentschecked"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/parents"
                                    android:textSize="16sp"/>
                                <CheckBox
                                    android:id="@+id/gauedianchecked"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/guardian"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:id="@+id/fatherLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/father_name"
                                    android:layout_marginTop="10dp"
                                    android:textSize="16sp"
                                    android:visibility="visible"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingBottom="5dp"/>
                                <TextView
                                    android:id="@+id/errorTextFather"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:textColor="@color/Red"
                                    android:padding="3dp"/>

                                <EditText
                                    android:id="@+id/fatherName"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="@string/father_name"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:visibility="gone"
                                    android:maxLines="1"
                                    android:textSize="16sp"
                                    android:focusable="true"
                                    android:imeOptions="actionDone"
                                    android:textColor="@color/black"
                                    android:background="@drawable/textfieldbg"/>
                                <TextView
                                    android:id="@+id/guardianLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/guardian_name"
                                    android:layout_marginTop="10dp"
                                    android:textSize="16sp"
                                    android:visibility="visible"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingBottom="5dp"/>
                                <TextView
                                    android:id="@+id/errorTextGuardian"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:textColor="@color/Red"
                                    android:padding="3dp"/>
                                <EditText
                                    android:id="@+id/GuardianName"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="@string/guardian_name"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:maxLines="1"
                                    android:textSize="16sp"
                                    android:imeOptions="actionDone"
                                    android:focusable="true"
                                    android:visibility="gone"
                                    android:textColor="@color/black"
                                    android:background="@drawable/textfieldbg"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/genderContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/genderLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/gender"
                                    android:visibility="visible"
                                    android:padding="5dp"
                                    android:textSize="16sp"
                                    />
                                <TextView
                                    android:id="@+id/errorTextGender"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:textColor="@color/Red"
                                    android:padding="3dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:orientation="vertical"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:background="@drawable/textfieldbg">
                                    <Spinner
                                        android:id="@+id/beneficiarygender"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/contactLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/enter_contact_number"
                                    android:visibility="visible"
                                    android:textSize="16sp"
                                    android:padding="5dp"
                                    android:layout_marginTop="15dp"
                                    />
                                <TextView
                                    android:id="@+id/errorTextContact"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:textColor="@color/Red"
                                    android:padding="3dp"/>
                                <EditText
                                    android:id="@+id/contact"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:maxLines="1"
                                    android:hint="@string/enter_contact_number"
                                    android:focusable="true"
                                    android:imeOptions="actionDone"
                                    android:textColor="@color/black"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:textSize="16sp"
                                    android:background="@drawable/textfieldbg"/>
                                <LinearLayout
                                    android:id="@+id/secondaryContactLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:orientation="vertical">
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/addMoreContact"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:textColor="#FFF"
                                        android:text="@string/add_more"/>
                                </LinearLayout>
                                <Button
                                    android:id="@+id/addAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Add Address"/>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:gravity="end">
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="#FFF"/>
        <Button
            android:id="@+id/saveData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginRight="27dp"
            android:textColor="#fff"/>
    </LinearLayout>


</RelativeLayout>
