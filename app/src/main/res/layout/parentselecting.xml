<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/formRowColor">
   <TextView
       android:id="@+id/parent_heading"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColor="@color/black"
       android:textSize="14dp"
       android:padding="10dp"/>
    <TextView
        android:id="@+id/error_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Red"
        android:textSize="14dp"
        android:visibility="gone"
        android:layout_below="@+id/parent_heading"
        android:padding="10dp"/>
    <LinearLayout
        android:id="@+id/singlespinnercontainer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
       android:layout_below="@+id/error_heading"
        android:background="@color/formRowColor">

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/ten"
        android:background="@drawable/divider"
        android:layout_below="@id/singlespinnercontainer"
        />
</RelativeLayout>