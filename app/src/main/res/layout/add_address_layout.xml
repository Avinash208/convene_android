<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/convenebg"
        android:layout_above="@+id/footer">
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/boundaryLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address_details"
                android:visibility="visible"
                android:textSize="16sp"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/boundaryType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/boundary"
                android:visibility="visible"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/errorTextLocationtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/Red"
                android:padding="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/textfieldbg">
                <Spinner
                    android:id="@+id/locationlevel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />
            </LinearLayout>

            <TextView
                android:layout_below="@+id/boundaryLabel"
                android:id="@+id/stateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/state"
                android:visibility="visible"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/errorTextState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/Red"
                android:padding="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/textfieldbg">
                <Spinner
                    android:id="@+id/housrholdstate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/districtLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/district"
                android:visibility="visible"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/errorTextDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/Red"
                android:padding="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/textfieldbg">
                <Spinner
                    android:id="@+id/housrholddistrict"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />
            </LinearLayout>
            <TextView
                android:id="@+id/talukLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/taluk"
                android:visibility="visible"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/errorTextTaluk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/Red"
                android:padding="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/textfieldbg">
                <Spinner
                    android:id="@+id/housrholdtaluk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />
            </LinearLayout>
            <TextView
                android:id="@+id/grampanchayatLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gramapanchayath"
                android:visibility="visible"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/errorTextGrampanchat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/Red"
                android:padding="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/textfieldbg">
                <Spinner
                    android:id="@+id/housrholdgrampanchayat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />
            </LinearLayout>
            <TextView
                android:id="@+id/villageLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/village"
                android:visibility="visible"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/errorTextVillage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/Red"
                android:padding="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/textfieldbg">
                <Spinner
                    android:id="@+id/housrholdvillage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />
            </LinearLayout>
            <TextView
                android:id="@+id/hamletLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Hamlet"
                android:visibility="visible"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/errorTextHamlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/Red"
                android:padding="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/textfieldbg">
                <Spinner
                    android:id="@+id/housrholdhamlet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />
            </LinearLayout>
            <TextView
                android:id="@+id/textAddressValid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/is_add_valid"/>

            <TextView
                android:id="@+id/errorTextAddressValid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/Red"/>

            <RadioGroup
                android:id="@+id/addressValidRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"/>
                <RadioButton
                    android:id="@+id/radio_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no"/>
            </RadioGroup>

            <TextView
                android:id="@+id/addressProofLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/proofs"
                android:textColor="@color/black"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/errorTextAddressProof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/Red"/>
            <LinearLayout
                android:id="@+id/linearAddressproof"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:visibility="gone"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/textfieldbg">
                <Spinner
                    android:id="@+id/addressProofSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />
            </LinearLayout>
            <TextView
                android:id="@+id/addressLabel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/line_one"
                android:visibility="visible"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/errorTextAddress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/Red"
                android:padding="3dp"/>
            <EditText
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Enter line 1 ..."
                android:paddingBottom="30dp"
                android:focusable="true"
                android:maxLines="3"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="top"
                android:padding="10dp"
                android:background="@drawable/textfieldbg"/>
            <TextView
                android:id="@+id/addressLabel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/line_two"
                android:visibility="visible"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/errorTextAddress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/Red"
                android:padding="3dp"/>
            <EditText
                android:id="@+id/address2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="top"
                android:maxLines="3"
                android:hint="Enter line 2 ..."
                android:focusable="true"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="16sp"
                android:background="@drawable/textfieldbg"/>
            <TextView
                android:id="@+id/pincodeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pincode"
                android:visibility="visible"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/errorTextPincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/Red"
                android:padding="3dp"/>
            <EditText
                android:id="@+id/pincode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter Pincode Number"
                android:focusable="true"
                android:inputType="number"
                android:paddingLeft="8dp"
                android:maxLines="1"
                android:textSize="16sp"
                android:maxLength="6"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:background="@drawable/textfieldbg"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:visibility="visible"
        android:orientation="horizontal"
        android:gravity="end">
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="#FFF"/>
        <Button
            android:id="@+id/saveDataButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginRight="27dp"
            android:textColor="#fff"/>
    </LinearLayout>
</RelativeLayout>