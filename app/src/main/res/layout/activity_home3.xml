<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/fwwb_border_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar1"
            layout="@layout/toolbar">
        </include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Logged in as : "
                android:gravity="center_vertical"
                android:textColor="#6c6c6c"
                android:textSize="18sp"
                android:fontFamily="fonts/Roboto-Medium.ttf"
                />
            <TextView
                android:id="@+id/userNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_vertical"
                android:textColor="#232323"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Akrspi"
                android:fontFamily="fonts/Roboto-Medium.ttf"
                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/dueContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearheader"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_homepagebtn"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/projectandactivity"
            android:paddingLeft="22dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:textSize="18sp"
            android:layout_marginRight="15dp"
            android:shadowColor="@color/black"
            android:drawableLeft="@drawable/activity"
            android:textAllCaps="true"

            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/dueContainer"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/linearContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                app:cardBackgroundColor="#db2064"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="@dimen/five"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/dataformsLinear"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:weightSum="2"
                    android:visibility="visible">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/trainings_icon"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/tvTraining"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="Trainings"
                        android:fontFamily="@font/heebo_regular"
                        android:padding="1dp"
                        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        />


                </LinearLayout>

            </android.support.v7.widget.CardView>
            <ExpandableListView
                android:id="@+id/expandableListview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:layout_marginBottom="20dp"
                android:listSelector = "@drawable/selector_list_item"
                android:groupIndicator="@drawable/group_indicator">
            </ExpandableListView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/footer"
        android:visibility="visible"
        android:layout_below="@+id/dueContainer">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:visibility="visible"
               app:cardBackgroundColor="#db2064"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               app:cardCornerRadius="@dimen/five"
               app:cardElevation="4dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:paddingStart="20dp"
                   android:weightSum="2"
                   android:visibility="visible">
                   <ImageView
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:layout_gravity="center_vertical"
                       android:src="@drawable/summary_icon" />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:paddingStart="20dp"
                       android:gravity="center_vertical"
                       android:layout_gravity="center_vertical"
                       android:text="Summery"
                       android:fontFamily="@font/heebo_regular"
                       android:padding="1dp"
                       android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                       android:textAllCaps="false"
                       android:textColor="@color/white"
                       android:textSize="18sp"
                       android:textStyle="normal" />
               </LinearLayout>
           </android.support.v7.widget.CardView>
       </LinearLayout>
        <include
            android:id="@+id/bottomLayout"
            layout="@layout/home_button_dynamic">
        </include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:visibility="visible"
                app:cardBackgroundColor="#3743aa"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="@dimen/five"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:weightSum="2"
                    android:visibility="visible">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/pending_surveys" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="Pending Surveys"
                        android:fontFamily="@font/heebo_regular"
                        android:padding="1dp"
                        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#3743aa"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="@dimen/five"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:weightSum="2">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/completed_surveys" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="Completed Surveys"
                        android:fontFamily="@font/heebo_regular"
                        android:padding="1dp"
                        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <include
       android:id="@+id/bottomLayout"
       layout="@layout/activity_setting">
   </include>

</RelativeLayout>