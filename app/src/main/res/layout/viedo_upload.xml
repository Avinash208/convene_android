<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        card_view:cardCornerRadius="3dp">
        <RelativeLayout
            android:id="@+id/relativeLayoutedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/mainQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/errorTextVideoview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainQuestion"
                android:padding="2dp"
                android:visibility="gone"
                android:textColor="@android:color/holo_red_light"
                />
            <ImageView
                android:id="@+id/video_upload"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/no_media"
                android:layout_below="@+id/errorTextVideoview"

                />

            <ImageView
                android:id="@+id/video_clip"
                android:layout_height="70dp"
                android:layout_width="60dp"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/gtk_media_play_ltr"
                />

        </RelativeLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>
