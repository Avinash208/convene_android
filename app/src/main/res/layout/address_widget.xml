<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/form_row"
    android:padding="8dp">
    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:background="@color/formRowColor"        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:id="@+id/mainQuestionspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Address "
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingBottom="5dp">
            <TextView
                android:id="@+id/errorTextdropdownview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:padding="4dp"
                android:text="Country" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:visibility="gone"
                android:gravity="center">
                <ProgressBar
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"


            >
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:backgroundTint="@color/pink"
                >
            </Spinner>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingStart="3dp"
                android:background="@color/pale_orange" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="State" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"


            >
            <Spinner
                android:id="@+id/state_spinner"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:backgroundTint="@color/pink"
                >
            </Spinner>
            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingStart="3dp"
                android:background="@color/pale_orange" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="District" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"


            >
            <Spinner
                android:id="@+id/district_spinner"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:backgroundTint="@color/pink"
                >
            </Spinner>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingStart="3dp"
                android:background="@color/pale_orange" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Taluk" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"


            >
            <Spinner
                android:id="@+id/taluk_spinner"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:backgroundTint="@color/pink"
                >
            </Spinner>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingStart="3dp"
                android:background="@color/pale_orange" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="GramaPanchayath" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"


            >
            <Spinner
                android:id="@+id/gramaPanchayath_spinner"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:backgroundTint="@color/pink"
                >
            </Spinner>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingStart="3dp"
                android:background="@color/pale_orange" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Village" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"


            >
            <Spinner
                android:id="@+id/village_spinner"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:backgroundTint="@color/pink"
                >
            </Spinner>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingStart="3dp"
                android:background="@color/pale_orange" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Hamlet" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"


            >
            <Spinner
                android:id="@+id/hamlet_spinner"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:backgroundTint="@color/pink"
                >
            </Spinner>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingStart="3dp"
                android:background="@color/pale_orange" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>