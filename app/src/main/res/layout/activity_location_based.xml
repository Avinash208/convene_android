<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.mahiti.convenemis.LocationBasedActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="visible"
                android:padding="6dp"
                android:background="@drawable/toolback" />
            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_weight="1.6"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Child"
                android:fontFamily="fonts/Roboto-Light.ttf"/>
            <ImageView
                android:id="@+id/imageMenu"
                android:visibility="visible"
                android:layout_width="30dp"
                android:layout_marginRight="8dp"
                android:layout_height="match_parent"
                android:background="@drawable/menu"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/form_row"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer"
            android:background="@color/formRowColor"
            android:orientation="vertical"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/mainQuestionspinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/countrycontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/errorTextdropdownview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="Country" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:backgroundTint="@color/pink"/>
                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/statecontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="State" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/state_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/pink"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/districtcontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="District" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/district_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/pink"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/talukcontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Taluk" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/taluk_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/pink"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/gramapanchayathcontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="GramaPanchayath" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical">
                        <Spinner
                            android:id="@+id/gramaPanchayath_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/pink"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/villagecontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Village" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical">
                        <Spinner
                            android:id="@+id/village_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/pink"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Hamletcontainer"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Hamlet" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical">
                        <Spinner
                            android:id="@+id/hamlet_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/pink" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
