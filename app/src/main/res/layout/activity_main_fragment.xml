<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9e4"
    tools:context="org.mahiti.convenemis.SurveyQuestionActivity">
    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar_survey_question"/>
    <RelativeLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar1">
        <TextView
            android:id="@+id/sub_blockName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:fontFamily="fonts/Roboto-Regular.ttf"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/blockName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="fonts/Roboto-Regular.ttf"
            android:layout_marginTop="10dp"
            android:text="BlockName"
            android:layout_marginBottom="8dp"
            android:visibility="visible"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/heading"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:fadeScrollbars="false"
        >
        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/dynamicQuestionSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/buttonHeight"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        >

        <Button
            android:id="@+id/next"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/next"
            android:layout_marginRight="24dp"
            android:background="@drawable/button_click"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:text="@string/previous"
            android:layout_marginLeft="22dp"
            android:background="@drawable/button_click"
            android:textColor="@color/textColor"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</RelativeLayout>

