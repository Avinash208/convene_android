<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context="org.mahiti.convenemis.ListingActivity">
    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar">
    </include>
    <LinearLayout
        android:id="@+id/filter_sort_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/toolbar1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="10dp">
            <org.mahiti.convenemis.CustomAutoCompleteTextView
                android:id="@+id/autosearch_names"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:paddingLeft="5dp"
                android:background="@drawable/textfieldbg"
                android:hint="Search"
                 />
            <ImageView
               android:id="@+id/resetautosearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:background="@drawable/ic_close"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="2">
            <Button
                android:id="@+id/sort"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Sort by"
                android:layout_marginRight="5dp"
                android:background="@drawable/sort_button"
                android:textColor="#fff"/>
            <Button
                android:id="@+id/filter"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="Filters"
                android:background="@drawable/sort_button"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearheader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_below="@+id/filter_sort_container"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/question_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:textColor="#f44336"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1.7"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/typelistview"
        android:layout_below="@+id/linearheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:visibility="visible"
        android:divider="@null"
        android:layout_marginTop="10dp"
        android:fadeScrollbars="false"
        android:layout_marginRight="15dp">
    </android.support.v7.widget.RecyclerView>


    <TextView
        android:id="@+id/emptytextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearheader"
        android:layout_marginTop="200dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:text="@string/no_beneficiary_added"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/createNewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:layout_margin="@dimen/fab_margin"
            app:backgroundTint="@color/pink"
            app:srcCompat="@drawable/ic_add" />

        <include
            android:id="@+id/loadItemsLayout_listView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/progress_layout"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>